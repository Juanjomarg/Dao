<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".fragments.leccion1.Leccion1Notas"

    >

    <TextView
        android:id="@+id/boton_notas_1"
        style="@style/subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1). Nǐ hǎo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notas_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Leccion1Notas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_notas_1" />

    <TextView
        android:id="@+id/boton_notas_2"
        style="@style/subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="(2) Nǐ hǎo ma？"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notas_content_1" />

    <TextView
        android:id="@+id/notas_content_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Leccion1Notas2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton_notas_2" />

    <TextView
        android:id="@+id/boton_notas_3"
        style="@style/subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="(3) Nǐ ne？"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notas_content_2" />

    <TextView
        android:id="@+id/notas_content_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Leccion1Notas3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_notas_3"

        />

    <TextView
        android:id="@+id/boton_notas_4"
        style="@style/subtitulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="(4) Yě hěn hǎo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notas_content_3" />

    <TextView
        android:id="@+id/notas_content_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Leccion1Notas4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_notas_4"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
