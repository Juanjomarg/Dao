<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:padding="30dp"
    tools:context=".fragments.leccion1.Leccion1PracticaConversacion">

    <TextView
        android:id="@+id/titulo_conversacion"
        style="@style/titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expresiones clave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitulo_conversacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重点句式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_conversacion" />


    <TextView
        android:id="@+id/leccion_1_expresiones_clave"
        style="@style/texto_notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/campo_texto"
        android:fontFamily="@font/helvetica_neue_bold"
        android:padding="30dp"
        android:text="@string/leccion1_expresionesclave_text"
        android:textSize="20sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitulo_conversacion" />


    <TextView
        android:id="@+id/leccion_1_dialogo_situacional"
        style="@style/titulos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Dialogo situacional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leccion_1_expresiones_clave" />

    <TextView
        android:id="@+id/text_dialogo_situacional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/text_dialogo_situacional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leccion_1_dialogo_situacional" />

    <TextView
        android:id="@+id/text_zh_dialogo_situacional"
        style="@style/texto_notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/campo_texto"
        android:fontFamily="@font/ma_shan_zheng"
        android:padding="30dp"
        android:text="@string/dialogo_situacional_zh"
        android:textSize="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_dialogo_situacional" />

</androidx.constraintlayout.widget.ConstraintLayout>