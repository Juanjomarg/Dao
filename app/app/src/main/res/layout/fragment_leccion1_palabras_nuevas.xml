<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.leccion1.ui.theme.Leccion1PalabrasNuevas">

    <ScrollView
        android:id="@+id/leccion_1_palabras_nuevas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_tu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tu_pinyin"
                    style="@style/text_pinyin"
                    android:text="Nǐ"
                    app:layout_constraintEnd_toEndOf="@+id/tu_caracter"
                    app:layout_constraintStart_toStartOf="@+id/tu_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tu_caracter"
                    style="@style/text_character"
                    android:text="你"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tu_pinyin" />

                <TextView
                    android:id="@+id/tu_traduccion"
                    style="@style/text_traduccion"
                    android:text="Pro. Tú"
                    app:layout_constraintStart_toStartOf="@id/tu_caracter"
                    app:layout_constraintTop_toBottomOf="@id/tu_caracter" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_bien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_tu">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bien_pinyin"
                    style="@style/text_pinyin"
                    android:text="Hǎo"
                    app:layout_constraintEnd_toEndOf="@+id/bien_caracter"
                    app:layout_constraintStart_toStartOf="@+id/bien_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bien_caracter"
                    style="@style/text_character"
                    android:text="好"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bien_pinyin" />

                <TextView
                    android:id="@+id/bien_traduccion"
                    style="@style/text_traduccion"
                    android:text="Adj. Bien, bueno, OK"
                    app:layout_constraintStart_toStartOf="@id/bien_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/bien_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_libo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_bien">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/libo_pinyin"
                    style="@style/text_pinyin"
                    android:text="Lì       bō"
                    app:layout_constraintEnd_toEndOf="@+id/libo_caracter"
                    app:layout_constraintStart_toStartOf="@+id/libo_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/libo_caracter"
                    style="@style/text_character"
                    android:text="力波"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/libo_pinyin" />

                <TextView
                    android:id="@+id/libo_traduccion"
                    style="@style/text_traduccion"
                    android:text="NP. Nombre"
                    app:layout_constraintStart_toStartOf="@id/libo_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/libo_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_luyu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_libo">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/luyu_pinyin"
                    style="@style/text_pinyin"
                    android:text="Lù        yǔ     píng"
                    app:layout_constraintEnd_toEndOf="@+id/luyu_caracter"
                    app:layout_constraintStart_toStartOf="@+id/luyu_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/luyu_caracter"
                    style="@style/text_character"
                    android:text="陆雨平"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/luyu_pinyin" />

                <TextView
                    android:id="@+id/luyu_traduccion"
                    style="@style/text_traduccion"
                    android:text="NP. periodista chino"
                    app:layout_constraintStart_toStartOf="@id/luyu_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/luyu_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_hao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_luyu">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hao_pinyin"
                    style="@style/text_pinyin"
                    android:text="Hǎo"
                    app:layout_constraintEnd_toEndOf="@+id/hao_caracter"
                    app:layout_constraintStart_toStartOf="@+id/hao_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hao_caracter"
                    style="@style/text_character"
                    android:text="好"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hao_pinyin" />

                <TextView
                    android:id="@+id/hao_traduccion"
                    style="@style/text_traduccion"
                    android:text="Adj. Bien, bueno, OK"
                    app:layout_constraintStart_toStartOf="@id/hao_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/hao_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_ma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout_hao">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ma_pinyin"
                    style="@style/text_pinyin"
                    android:text="Ma"
                    app:layout_constraintEnd_toEndOf="@+id/ma_caracter"
                    app:layout_constraintStart_toStartOf="@+id/ma_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ma_caracter"
                    style="@style/text_character"
                    android:text="吗"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ma_pinyin" />

                <TextView
                    android:id="@+id/ma_traduccion"
                    style="@style/text_traduccion"
                    android:text="Ptl. Partícula interrogativa"
                    app:layout_constraintStart_toStartOf="@id/ma_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/ma_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_wo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:background="@drawable/button_border_chiqui"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_ma">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:rotation="180"
                    android:src="@drawable/ic_action_arrow_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wo_pinyin"
                    style="@style/text_pinyin"
                    android:text="Wǒ"
                    app:layout_constraintEnd_toEndOf="@+id/wo_caracter"
                    app:layout_constraintStart_toStartOf="@+id/wo_caracter"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/wo_caracter"
                    style="@style/text_character"
                    android:text="我"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wo_pinyin" />

                <TextView
                    android:id="@+id/wo_traduccion"
                    style="@style/text_traduccion"
                    android:text="Pro. Yo, mí, me"
                    app:layout_constraintStart_toStartOf="@id/wo_caracter"
                    app:layout_constraintTop_toBottomOf="@+id/wo_caracter" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
