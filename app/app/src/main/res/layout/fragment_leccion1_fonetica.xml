<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".fragments.leccion1.Leccion1Fonetica">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/boton_notas_1"
                style="@style/subtitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Iniciales y finales"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/notas_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leccion_1_fonetica_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_notas_1" />

            <TextView
                android:id="@+id/boton_notas_2"
                style="@style/subtitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="2. Puntos claves en pronunciación"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notas_content_1" />

            <TextView
                android:id="@+id/notas_content_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leccion1_fonetica_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_notas_2" />

            <TextView
                android:id="@+id/boton_notas_3"
                style="@style/subtitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="3. Todos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notas_content_2" />

            <TextView
                android:id="@+id/notas_content_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leccion1_fonetica_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_notas_3" />

            <TextView
                android:id="@+id/boton_notas_4"
                style="@style/subtitulos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="4. Yě hěn hǎo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notas_content_3" />

            <TextView
                android:id="@+id/notas_content_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/Leccion1Notas4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boton_notas_4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>