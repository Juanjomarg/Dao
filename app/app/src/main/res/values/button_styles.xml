<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_primary">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize20sp</item>
        <item name="android:fontFamily">@font/HelveticaNeueBold</item>
        <item name="android:textColor">@color/rojo</item>

        <item name="android:background">@drawable/button_primary</item>
        <!-- Add more style attributes as needed -->
    </style>
    <style name="button_secondary">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/HelveticaNeueLightItalic</item>
        <item name="android:textColor">@color/blanco</item>

        <item name="android:background">@drawable/button_secondary</item>
        <!-- Add more style attributes as needed -->
    </style>

    <style name="input_field">
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/HelveticaNeueLight</item>
        <item name="android:textColor">@color/gris_oscuro</item>

        <item name="android:background">@drawable/text_field</item>
        <item name="android:layout_marginVertical">@dimen/dim_10dp</item>
        <item name="android:paddingHorizontal">@dimen/dim_15dp</item>
        <item name="android:paddingVertical">@dimen/dim_15dp</item>
        <!-- Add more style attributes as needed -->
    </style>

</resources>
