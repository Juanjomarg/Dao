<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amarillo_light</item>
        <item name="colorPrimaryVariant">@color/amarillo_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rojo_light</item>
        <item name="colorSecondaryVariant">@color/rojo_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="boton_primario" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="backgroundTint">@color/amarillo_light</item>

    </style>

    <style name="boton_secundario" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="backgroundTint">@color/amarillo_light</item>
    </style>

    <style name="input_field">
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@color/gris_oscuro</item>

        <item name="android:background">@drawable/campo_texto</item>
        <item name="android:layout_marginBottom">@dimen/dim_10dp</item>
        <item name="android:paddingHorizontal">@dimen/dim_15dp</item>
        <item name="android:paddingVertical">@dimen/dim_15dp</item>
        <!-- Add more style attributes as needed -->
    </style>
</resources>