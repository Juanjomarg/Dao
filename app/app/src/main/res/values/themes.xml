<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dao" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/amarillo_light</item>
        <item name="colorPrimaryVariant">@color/amarillo_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rojo_light</item>
        <item name="colorSecondaryVariant">@color/rojo_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView
        </item>
    </style>

    <style name="boton_primario" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="backgroundTint">@color/amarillo_light</item>

    </style>

    <style name="boton_secundario" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@color/gris_oscuro</item>
        <item name="backgroundTint">@color/amarillo_light</item>
    </style>

    <style name="invisible">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/dim_10dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="lvl">
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/dim_50dp</item>
        <item name="android:layout_height">@dimen/dim_50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="input_field">
        <item name="android:textSize">@dimen/textsize16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <!-- textColorHint permite cambiar el color de la letra
        cosa toda rara, wtf???? La gente de Google me cae mal
        No les basta con robar mis datos, sino que ahora también
        no saber programar cosas con consistencia???-->
        <item name="android:textColorHint">@color/gris_oscuro</item>
        <item name="android:background">@drawable/campo_texto</item>
        <item name="android:layout_marginBottom">@dimen/dim_10dp</item>
        <item name="android:paddingHorizontal">@dimen/dim_15dp</item>
        <item name="android:paddingVertical">@dimen/dim_15dp</item>
        <!-- Add more style attributes as needed -->
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
    </style>

    <style name="titulos">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/textsize30sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris_claro</item>
    </style>

    <style name="subtitulos">
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gris_claro</item>
    </style>

    <style name="texto_lecciones">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/amarillo_light</item>
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dim_30dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="imagenes_lecciones">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">154dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="botones_indice">
        <item name="android:layout_width">330dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@color/amarillo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="titulo_lectura">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48dp</item>
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintVertical_bias">0.08</item>
    </style>

    <style name="subtitulo_lectura">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48dp</item>
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
        <item name="android:text">一，课文</item>
        <item name="android:textColor">@color/black</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="boton_notas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:backgroundTint">@color/amarillo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="texto_notas">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helvetica_neue_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="relative_palabras_nuevas">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="text_pinyin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="text_character">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">58dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="text_traduccion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-18dp</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="image_palabras_nuevas">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:src">@drawable/next_arrow</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="button_ejercicios_fonetica">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/amarillo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
    </style>
    
    <style name="hint_palabra">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/amarillo_light</item>
        <item name="android:fontFamily">@font/ma_shan_zheng</item>
        <item name="android:textSize">23dp</item>
        <item name="android:padding">@dimen/dim_15dp</item>
        <item name="android:layout_margin">@dimen/dim_5dp</item>
    </style>


</resources>