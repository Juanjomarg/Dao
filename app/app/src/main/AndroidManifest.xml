<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dao"
        tools:targetApi="31">
        <activity
            android:name=".fragments.leccion1.Indice"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:label="@string/title_activity_indice"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dao" />
        <activity
            android:name=".PerfilPic"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:label="@string/title_activity_profile_pic"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dao" />
        <activity
            android:name=".FondoPic"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:label="FondoPic"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dao" />
        <activity
            android:name=".fragments.InicioPrincipal"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:label="@string/title_activity_inicio_principal"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Dao" />
        <activity
            android:name=".WelcomeToApp"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterToApp"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginToApp"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>